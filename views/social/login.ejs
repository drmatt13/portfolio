<head>
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="/css/social/login.css">
</head>

<body>
    <div class="login-container">
        <form action="/social" method="post">
            <div>
                <input type="text" id="login" name="login" placeholder="Username" required>
            </div>
            <div>
                <input type="password" id="password" name="password" placeholder="Password" required>
            </div>
            <div>
                <input type="submit" value="SIGN IN">
            </div>
        </form>
        <div class="register-container">
            <div class="register-container-child">
                <div>Not a member?</div><div><a href="/social/register">Sign up now</a></div>
            </div>
        </div>
    </div>
    <script defer>
        let style = document.createElement("style");
        style.innerHTML = 
        `.login-container div input {
            transition: 0.3s;
        }`;
        document.body.appendChild(style);
    </script>
</body>